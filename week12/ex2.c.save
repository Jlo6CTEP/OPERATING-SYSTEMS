#include<stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main(int argc, char **argv) {
	int mode = O_WRONLY; 
	for (int i = 0; i < argc; i++){
		if (argv[i][0] == '-' && argv[i][1] == 'a')
			mode = O_APPEND;
	}
	char buff[512];
	
	printf("%s", buff);
	for (int i = 0; i < argc; i++){
		int file = open(argv[i],mode);
		write(file,buff, 512);
		close(file); 
	}	
	return 0;
}
